7.1:
#include<iostream>
#include<string>

using namespace std;

class Sales_data{
public:
    string isbn() const {return bookNO;}
    Sales_data& combine(const Sales_data&);
private:
    string bookNO;
    unsigned units_sold;
    double revenue;
};

Sales_data& Sales_data::combine(const Sales_data &a){
    units_sold += a.units_sold;
    revenue += a.revenue;
    return *this;
}

